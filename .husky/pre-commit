#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx)$')

if [ -n "$STAGED_FILES" ]; then
    echo "Linting staged files..."
    echo "$STAGED_FILES" | xargs npx eslint --config eslint.config.mjs --fix || {
        echo "ESLint failed, commit aborted"
        exit 1
    }
    
    echo "Formatting staged files..."
    echo "$STAGED_FILES" | xargs npx prettier --write || {
        echo "Prettier failed, commit aborted"
        exit 1
    }

    # Re-add files that were fixed
    echo "$STAGED_FILES" | xargs git add
fi